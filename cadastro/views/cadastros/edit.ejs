<% layout('layouts/boilerplate')%>  
<div class="row">
    <h1 class="text-center">Atualizar cadastro</h1>
    <div class="col-6 offset-3">
        <form action="/cadastros/<%= cadastro._id%>?_method=PUT" method="POST">
            
            <div class="mb-3">
                <label class="form-label" for="cadastroNome">Nome:</label>
                <input class="form-control" type="text" id="cadastroNome" name="cadastro[cadastroNome]" value="<%= cadastro.cadastroNome %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroCpf">Cpf:</label>
                <input class="form-control" type="text" id="cadastroCpf" name="cadastro[cadastroCpf]" value="<%= cadastro.cadastroCpf %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroEmail">Email:</label>
                <input class="form-control" type="text" id="cadastroEmail" name="cadastro[cadastroEmail]" value="<%= cadastro.cadastroEmail %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroCelular">Celular:</label>
                <input class="form-control" type="text" id="cadastroCelular" name="cadastro[cadastroCelular]" value="<%= cadastro.cadastroCelular %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroTelefone">Telefone:</label>
                <input class="form-control" type="text" id="cadastroTelefone" name="cadastro[cadastroTelefone]" value="<%= cadastro.cadastroTelefone %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroBairro">Bairro:</label>
                <input class="form-control" type="text" id="cadastroBairro" name="cadastro[cadastroBairro]" value="<%= cadastro.cadastroBairro %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroRua">Rua:</label>
                <input class="form-control" type="text" id="cadastroRua" name="cadastro[cadastroRua]" value="<%= cadastro.cadastroRua %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroNumero">Numero:</label>
                <input class="form-control" type="text" id="cadastroNumero" name="cadastro[cadastroNumero]" value="<%= cadastro.cadastroNumero %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="cadastroComplemento">Complemento:</label>
                <input class="form-control" type="text" id="cadastroComplemento" name="cadastro[cadastroComplemento]" value="<%= cadastro.cadastroComplemento %>">
            </div>
              
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Atualizar">
                <a class="btn btn-dark" href="/cadastros">Voltar</a>
            </div>
            
        
        </form> 
    </div>
</div>