    <% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= people.first_name %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= people.last_name %></h6>
                  <p class="card-text">The score for this people is: <%= people.score %></p>
                  <a href="/peoples/<%= people._id %>/edit" class="card-link btn btn-info">Edit</a>
                  
                  <form class="d-inline" action="/peoples/<%= people._id%>?_method=DELETE" method="POST">
                    <button class="card-text btn btn-danger">Delete</button>
                  </form>
                </div>
                
                <div class="class-footer text-muted text-center mb-3">
                    <a href="/peoples">All Peoples</a>
                </div>
            </div>
        </div>
    </div>


  
    
  
   
    